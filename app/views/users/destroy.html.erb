<%= link_to 'Back', user_path %>

<div>
  <h2>Delete user</h2>

  <%= form_for(@user, :method => 'delete_user_path') do |f| %>

    <p>Are you sure you want to permanently delete this user?</p>

    <p class="reference-name"><%= f.object.title %></p>

    <div class="form-buttons">
      <%= f.submit("Delete User") %>
    </div>

  <% end %>
</div>